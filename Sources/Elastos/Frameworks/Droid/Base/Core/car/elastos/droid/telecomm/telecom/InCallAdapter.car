
module
{

    namespace Elastos {
    namespace Droid {
    namespace Telecomm {
    namespace Telecom {

        /**
         *  Encapsulates all audio states during a call.
         *  @hide
         */
        interface IInCallAdapter {
            AnswerCall(
                [in] String callId,
                [in] Int32 videoState);

            RejectCall(
                [in] String callId,
                [in] Boolean rejectWithMessage,
                [in] String textMessage);

            DisconnectCall(
                [in] String callId);

            HoldCall(
                [in] String callId);

            UnholdCall(
                [in] String callId);

            Mute(
                [in] Boolean shouldMute);

            SetAudioRoute(
                [in] Int32 route);

            PlayDtmfTone(
                [in] String callId,
                [in] Char32 digit);

            StopDtmfTone(
                [in] String callId);

            PostDialContinue(
                [in] String callId,
                [in] Boolean proceed);

            PhoneAccountSelected(
                [in] String callId,
                [in] IPhoneAccountHandle* accountHandle);

            Conference(
                [in] String callId,
                [in] String otherCallId);

            SplitFromConference(
                [in] String callId);

            MergeConference(
                [in] String callId);

            SwapConference(
                [in] String callId);

            TurnProximitySensorOn();

            TurnProximitySensorOff(
                [in] Boolean screenOnImmediately);
        }

    } // namespace Telecom
    } // namespace Telecomm
    } // namespace Droid
    } // namespace Elastos
}
