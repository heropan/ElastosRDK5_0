
module
{
    namespace Elastos {
    namespace Droid {
    namespace Hardware {
    namespace Hdmi {

    /**
     * A class that describes the HDMI port hotplug event.
     *
     * @hide
     *
     * @Involve
     * interface IParcelable;
     */
     //@SystemApi
    interface IHdmiHotplugEvent {
        /**
         * Return the port number for which the event occurred.
         *
         * @return port number
         */
        GetPort(
            [out] Int32* port);

        /**
         * Return the connection status associated with this event
         *
         * @return true if the device gets connected; otherwise false
         */
        IsConnected(
            [out] Boolean* port);
    }

    } // namespace Hdmi
    } // namespace Hardware
    } // namespace Droid
    } // namespace Elastos
}
