
module
{
    namespace Elastos {
    namespace Droid {
    namespace Bluetooth {

    /**
     * API for Bluetooth Headset Phone Service in phone app
     *
     * {@hide}
     */
    interface IIBluetoothHeadsetPhone {
        // Internal functions, not be made public
        AnswerCall(
            [out] Boolean* result);

        HangupCall(
            [out] Boolean* result);

        SendDtmf(
            [in] Int32 dtmf,
            [out] Boolean* result);

        ProcessChld(
            [in] Int32 chld,
            [out] Boolean* result);

        GetNetworkOperator(
            [out] String* op);

        GetSubscriberNumber(
            [out] String* number);

        ListCurrentCalls(
            [out] Boolean* result);

        QueryPhoneState(
            [out] Boolean* result);

        // Internal for phone app to call
        UpdateBtHandsfreeAfterRadioTechnologyChange();

        CdmaSwapSecondCallState();

        CdmaSetSecondCallState(
            [in] Boolean state);
    }

    } // Bluetooth
    } // Droid
    } // Elastos
}