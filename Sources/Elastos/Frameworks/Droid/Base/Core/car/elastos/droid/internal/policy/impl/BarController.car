
module
{
    interface Elastos.IO.IPrintWriter;
    interface Elastos.Droid.View.IWindowState;

    namespace Elastos {
    namespace Droid {
    namespace Internal {
    namespace Policy {
    namespace Impl {

    /**
     * Controls state/behavior specific to a system bar window.
     */
    [local]
    interface IBarController {

        SetWindow(
            [in] IWindowState* win);

        ShowTransient();

        IsTransientShowing(
            [out] Boolean* result);

        IsTransientShowRequested(
            [out] Boolean* result);

        WasRecentlyTranslucent(
            [out] Boolean* result);

        AdjustSystemUiVisibilityLw(
            [in] Int32  oldVis,
            [in] Int32  vis);

        ApplyTranslucentFlagLw(
            [in] IWindowState* win,
            [in] Int32 vis,
            [in] Int32 oldVis,
            [out] Int32* result);

        SetBarShowingLw(
            [in] Boolean show,
            [out] Boolean* result);

        CheckHiddenLw(
            [out] Boolean* result);

        CheckShowTransientBarLw(
            [out] Boolean* result);

        UpdateVisibilityLw(
            [in] Boolean transientAllowed,
            [in] Int32 oldVis,
            [in] Int32 vis,
            [out] Int32* result);

        Dump(
            [in] IPrintWriter* pw,
            [in] String prefix);
    }


    } // Impl
    } // Policy
    } // Internal
    } // Droid
    } // Elastos
}
