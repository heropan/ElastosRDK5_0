
module
{
    interface Elastos.Droid.Telecomm.Telecom.IPhone;
    interface Elastos.Droid.Telecomm.Telecom.ICall;
    interface Elastos.Droid.Telecomm.Telecom.IParcelableCall;
    using interface Elastos.Utility.IList;

    namespace Elastos {
    namespace Droid {
    namespace Telecomm {
    namespace Telecom {

    interface IPhoneListener {
        OnAudioStateChanged(
            [in] IPhone* phone,
            [in] IAudioState* audioState);

        OnBringToForeground(
            [in] IPhone* phone,
            [in] Boolean showDialpad);

        OnCallAdded(
            [in] IPhone* phone,
            [in] ICall* call);

        OnCallRemoved(
            [in] IPhone* phone,
            [in] ICall* call);
    }

    /**
     *  A unified virtual device providing a means of voice (and other) communication on a device.
     *
     *  @hide
     *
     */
    interface IPhone {

        InternalAddCall(
            [in] IParcelableCall* parcelableCall);

        InternalRemoveCall(
            [in] ICall* call);

        InternalUpdateCall(
            [in] IParcelableCall* parcelableCall);

        InternalSetPostDialWait(
            [in] String telecomId,
            [in] String remaining);

        InternalAudioStateChanged(
            [in] IAudioState* audioState);

        InternalGetCallByTelecomId(
            [in] String telecomId,
            [out] ICall** result);

        InternalBringToForeground(
            [in] Boolean showDialpad);

        Destroy();

        AddListener(
            [in] IPhoneListener* listener);

        RemoveListener(
            [in] IPhoneListener* listener);

        GetCalls(
            [out] IList** res);

        SetMuted(
            [in] Boolean state);

        SetAudioRoute(
            [in] Int32 route);

        SetProximitySensorOn();

        SetProximitySensorOff(
            [in] Boolean screenOnImmediately);

        GetAudioState(
            [out] IAudioState** res);
    }

    } // namespace Telecom
    } // namespace Telecomm
    } // namespace Droid
    } // namespace Elastos
}
