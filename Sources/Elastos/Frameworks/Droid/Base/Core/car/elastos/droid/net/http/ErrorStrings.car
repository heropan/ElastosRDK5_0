module
{
    interface Elastos.Droid.Content.IContext;

    namespace Elastos {
    namespace Droid {
    namespace Net {
    namespace Http {

    [local]
    interface IErrorStrings {
        /**
         * Get the localized error message resource for the given error code.
         * If the code is unknown, we'll return a generic error message.
         */
        GetString(
            [in] Int32 errorCode,
            [in] IContext* context,
            [out] String* result);

        /**
         * Get the localized error message resource for the given error code.
         * If the code is unknown, we'll return a generic error message.
         */
        GetResource(
            [in] Int32 errorCode,
            [out] Int32* result);

    }

    } // namespace Http
    } // namespace Net
    } // namespace Droid
    } // namespace Elastos
}
