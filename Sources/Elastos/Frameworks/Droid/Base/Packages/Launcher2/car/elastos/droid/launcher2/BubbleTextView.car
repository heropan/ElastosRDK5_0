module
{
    using interface Elastos.Droid.Graphics.IBitmap;

    interface Elastos.Droid.Launcher2.IShortcutInfo;
    interface Elastos.Droid.Launcher2.IIconCache;

    namespace Elastos {
    namespace Droid {
    namespace Launcher2 {

    /*
