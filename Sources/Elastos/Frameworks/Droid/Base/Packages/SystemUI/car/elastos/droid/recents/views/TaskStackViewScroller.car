
module
{
    using interface Elastos.Droid.Animation.IObjectAnimator;
    using interface Elastos.Core.IRunnable;

    namespace Elastos {
    namespace Droid {
    namespace Packages {
    namespace SystemUI {
    namespace Recents {
    namespace Views {

    interface ITaskStackViewScrollerCallbacks {

        OnScrollChanged(
            [in] Float p);
    }

    /* The scrolling logic for a TaskStackView */
    [local]
    interface ITaskStackViewScroller {

        /** Sets the callbacks */
        SetCallbacks(
            [in] ITaskStackViewScrollerCallbacks* cb);

        /** Gets the current stack scroll */
        GetStackScroll(
            [out] Float* result);

        /** Sets the current stack scroll */
        SetStackScroll(
            [in] Float s);

        /** Sets the current stack scroll without calling the callback. */
        SetStackScrollRaw(
            [in] Float s);

        /** Sets the current stack scroll to the initial state when you first enter recents */
        SetStackScrollToInitialState();

        /** Bounds the current scroll if necessary */
        BoundScroll(
            [out] Boolean* result);

        /** Bounds the current scroll if necessary, but does not synchronize the stack view with the model. */
        BoundScrollRaw(
            [out] Boolean* result);

        /** Returns the bounded stack scroll */
        GetBoundedStackScroll(
            [in] Float scroll,
            [out] Float* result);

        /** Returns the amount that the aboslute value of how much the scroll is out of bounds. */
        GetScrollAmountOutOfBounds(
            [in] Float scroll,
            [out] Float* result);

        /** Returns whether the specified scroll is out of bounds */
        IsScrollOutOfBounds(
            [out] Boolean* result);

        /** Animates the stack scroll into bounds */
        AnimateBoundScroll(
            [out] IObjectAnimator** result);

        /** Animates the stack scroll */
        AnimateScroll(
            [in] Float curScroll,
            [in] Float newScroll,
            [in] IRunnable* postRunnable);

        /** Aborts any current stack scrolls */
        StopBoundScrollAnimation();

        /**** OverScroller ****/

        ProgressToScrollRange(
            [in] Float p,
            [out] Int32* result);

        ScrollRangeToProgress(
            [in] Int32 s,
            [out] Float* result);

        /** Called from the view draw, computes the next scroll. */
        ComputeScroll(
            [out] Boolean* result);

        /** Returns whether the overscroller is scrolling. */
        IsScrolling(
            [out] Boolean* result);

        /** Stops the scroller and any current fling. */
        StopScroller();
    }

    } // namespace Views
    } // namespace Recents
    } // namespace SystemUI
    } // namespace Packages
    } // namespace Droid
    } // namespace Elastos
}
