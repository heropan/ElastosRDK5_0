
module
{
    namespace Elastos {
    namespace Droid {
    namespace Packages {
    namespace SystemUI {
    namespace Recents {
    namespace Views {

    /** Manages the scrims for the various system bars. */
    interface ISystemBarScrimViews {

        /**
         * Prepares the scrim views for animating when entering Recents. This will be called before
         * the first draw.
         */
        PrepareEnterRecentsAnimation();

        /**
         * Starts animating the scrim views when entering Recents.
         */
        StartEnterRecentsAnimation();

        /**
         * Starts animating the scrim views when leaving Recents (either via launching a task, or
         * going home).
         */
        StartExitRecentsAnimation();
    }

    } // namespace Views
    } // namespace Recents
    } // namespace SystemUI
    } // namespace Packages
    } // namespace Droid
    } // namespace Elastos
}
