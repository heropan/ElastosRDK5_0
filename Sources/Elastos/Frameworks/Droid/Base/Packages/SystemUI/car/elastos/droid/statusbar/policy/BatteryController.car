
module
{
    namespace Elastos {
    namespace Droid {
    namespace SystemUI {
    namespace StatusBar {
    namespace Policy {

    interface IBatteryStateChangeCallback {
        OnBatteryLevelChanged(
            [in] Int32 level,
            [in] Boolean pluggedIn,
            [in] Boolean charging);

        OnPowerSaveChanged();
    }

    /**
     * @Involve
     * interface Elastos.Droid.Content.IBroadcastReceiver
     */
    interface IBatteryController {

        AddStateChangedCallback(
            [in] IBatteryStateChangeCallback* cb);

        RemoveStateChangedCallback(
            [in] IBatteryStateChangeCallback* cb);

        IsPowerSave(
            [out] Boolean* result);
    }

    } // namespace Policy
    } // namespace StatusBar
    } // namespace SystemUI
    } // namespace Droid
    } // namespace Elastos
}
