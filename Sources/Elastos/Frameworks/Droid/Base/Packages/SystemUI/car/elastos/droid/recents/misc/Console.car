
module
{
    interface Elastos.Droid.Content.IContext;

    namespace Elastos {
    namespace Droid {
    namespace Packages {
    namespace SystemUI {
    namespace Recents {
    namespace Misc {

    interface IConsole {

        // Colors
        const String AnsiReset = "\u001B[0m";
        const String AnsiBlack = "\u001B[30m";
        const String AnsiRed = "\u001B[31m";      // SystemUIHandshake
        const String AnsiGreen = "\u001B[32m";    // MeasureAndLayout
        const String AnsiYellow = "\u001B[33m";   // SynchronizeViewsWithModel
        const String AnsiBlue = "\u001B[34m";     // TouchEvents, Search
        const String AnsiPurple = "\u001B[35m";   // Draw
        const String AnsiCyan = "\u001B[36m";     // ClickEvents
        const String AnsiWhite = "\u001B[37m";

        // Console enabled state
        const Boolean Enabled = FALSE;

        /** Logs a key */
        Log(
            [in] String key);

        /** Logs a conditioned key */
        Log(
            [in] Boolean condition,
            [in] String key);

        /** Logs a key in a specific color */
        Log(
            [in] Boolean condition,
            [in] String key,
            [in] IInterface* data);

        /** Logs a key with data in a specific color */
        Log(
            [in] Boolean condition,
            [in] String key,
            [in] IInterface* data,
            [in] String color);

        /** Logs an error */
        LogError(
            [in] IContext* context,
            [in] String msg);

        /** Logs a raw error */
//        LogRawError(
//            [in] String msg,
//            [in] IException* e);

        /** Logs a divider bar */
        LogDivider(
            [in] Boolean condition);

        /** Starts a time trace */
        LogStartTracingTime(
            [in] Boolean condition,
            [in] String key);

        /** Continues a time trace */
        LogTraceTime(
            [in] Boolean condition,
            [in] String key,
            [in] String desc);

        /** Logs a stack trace */
        LogStackTrace();

        /** Logs a stack trace to a certain depth */
        LogStackTrace(
            [in] Int32 depth);

        /** Logs a stack trace to a certain depth with a key */
        LogStackTrace(
            [in] String key,
            [in] Int32 depth);

        /** Returns the stringified MotionEvent action */
        MotionEventActionToString(
            [in] Int32 action,
            [out] String* result);

        TrimMemoryLevelToString(
            [in] Int32 level,
            [out] String* result);
    }

    } // namespace Misc
    } // namespace Recents
    } // namespace SystemUI
    } // namespace Packages
    } // namespace Droid
    } // namespace Elastos
}
