
module
{
    interface Elastos.Droid.View.IMotionEvent;

    namespace Elastos {
    namespace Droid {
    namespace SystemUI {
    namespace Recents {
    namespace Views {

    /* Handles touch events for a TaskStackView. */
    /**
     * @Involve
     * interface ISwipeHelperCallback
     */
    [local]
    interface ITaskStackViewTouchHandler {

        /** Velocity tracker helpers */
        InitOrResetVelocityTracker();

        InitVelocityTrackerIfNotExists();

        RecycleVelocityTracker();

        /** Returns the view at the specified coordinates */
        FindViewAtPoint(
            [in] Int32 x,
            [in] Int32 y,
            [out] ITaskView** result);

        /** Constructs a simulated motion event for the current stack scroll. */
        CreateMotionEventForStackScroll(
            [in] IMotionEvent* ev,
            [out] IMotionEvent** result);

        /** Touch preprocessing for handling below */
        OnInterceptTouchEvent(
            [in] IMotionEvent* ev,
            [out] Boolean* result);

        /** Handles touch events once we have intercepted them */
        OnTouchEvent(
            [in] IMotionEvent* ev,
            [out] Boolean* result);
    }

    } // namespace Views
    } // namespace Recents
    } // namespace SystemUI
    } // namespace Droid
    } // namespace Elastos
}
