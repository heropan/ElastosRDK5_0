
module
{
    interface Elastos.Droid.View.IView;
    interface Elastos.Droid.View.IMotionEvent;

    namespace Elastos {
    namespace Droid {
    namespace SystemUI {
    namespace Recents {
    namespace Views {

    [local]
    interface ISwipeHelperCallback {
        GetChildAtPosition(
            [in] IMotionEvent* ev,
            [out] IView** result);

        CanChildBeDismissed(
            [in] IView* v,
            [out] Boolean* result);

        OnBeginDrag(
            [in] IView* v);

        OnSwipeChanged(
            [in] IView* v,
            [in] Float delta);

        OnChildDismissed(
            [in] IView* v);

        OnSnapBackCompleted(
            [in] IView* v);

        OnDragCancelled(
            [in] IView* v);
    }

    } // namespace Views
    } // namespace Recents
    } // namespace SystemUI
    } // namespace Droid
    } // namespace Elastos
}
