
module
{
    using interface Elastos.Droid.Bluetooth.IBluetoothDevice;
    using interface Elastos.Droid.Bluetooth.IBluetoothProfile;
    using interface Elastos.Droid.Os.IParcelUuid;

    namespace Elastos {
    namespace Droid {
    namespace Packages {
    namespace SystemUI {
    namespace StatusBar {
    namespace Policy {

    // common abstraction for supported profiles
    interface IBluetoothUtilProfile {
        Connect(
            [in] IBluetoothDevice* device,
            [out] Boolean* result);

        Disconnect(
            [in] IBluetoothDevice* device,
            [out] Boolean* result);
    }

    interface IBluetoothUtil {
        ProfileToString(
            [in] Int32 profile,
            [out] String* result);

        profileStateToString(
            [in] Int32 state,
            [out] String* result);

        uuidToString(
            [in] IParcelUuid* state,
            [out] String* result);

        connectionStateToString(
            [in] Int32 state,
            [out] String* result);

        deviceToString(
            [in] IBluetoothDevice* device,
            [out] String* result);

        uuidsToString(
            [in] IBluetoothDevice* device,
            [out] String* result);

        uuidToProfile(
            [in] IParcelUuid* uuid,
            [out] Int32* result);

        GetProfile(
            [in] IBluetoothProfile* bp,
            [out] IBluetoothUtilProfile** profile);
    }

    } // namespace Policy
    } // namespace StatusBar
    } // namespace SystemUI
    } // namespace Packages
    } // namespace Droid
    } // namespace Elastos
}
