
module
{
    namespace Elastos {
    namespace Droid {
    namespace Packages {
    namespace SystemUI {
    namespace Recents {
    namespace Views {

    interface ITaskFooterViewCallbacks {

        OnTaskFooterHeightChanged(
            [in] Int32 height,
            [in] Int32 maxHeight);
    }

    /** The task footer view */
    /**
     * @Involve
     * interface IFrameLayout
     */
    interface ITaskViewFooter {

        /** Sets the callbacks for when the footer height changes. */
        SetCallbacks(
            [in] ITaskFooterViewCallbacks* cb);

        /** Sets the footer height. */
        SetFooterHeight(
            [in] Int32 footerHeight);

        /** Gets the footer height. */
        GetFooterHeight(
            [out] Int32* h);

        /** Animates the footer into and out of view. */
        AnimateFooterVisibility(
            [in] Boolean visible,
            [in] Int32 duration);
    }

    } // namespace Views
    } // namespace Recents
    } // namespace SystemUI
    } // namespace Packages
    } // namespace Droid
    } // namespace Elastos
}
