else
ifeq "$(XDK_TARGET_PLATFORM)" "linux"
LIBRARIES += ../../marshal/others_rpc/marshal.lib
LIBRARIES += -lm -lc -ldl -lpthread -lstdc++ -ldbus-1 -lz -lrt
LIBRARIES += $(XDK_USER_LIB)/crt0.lib
else
LIBRARIES += ../../marshal/others/marshal.lib
LIBRARIES += -lm -lc -ldl -lpthread -lstdc++ -ldbus-1 -lz -lrt
LIBRARIES += $(XDK_USER_LIB)/crt0.lib
endif
endif
endif
